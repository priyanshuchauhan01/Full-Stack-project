<!-- index.ejs -->
<% layout("layouts/boilerplate") %>
<body>
    <h3>Your Next Destination</h3>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4  justify-content-center">
        <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                 <div class="card" style="width: 20rem;">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-img" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b>
                            <br>
                            <%= listing.description %>
                            <br>
                            <b class="rupee-symbol">
                                <% if (listing.price !== null && listing.price !== undefined) { %>
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                                <% } else { %>
                                    Price not available
                                <% } %>
                            </b>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
